@using Miachyna.Domain.Models
@model ListModel<Cosmetic>

@{
    ViewData["Title"] = "Catalog";
    var request = ViewContext.HttpContext.Request;
    var categories = ViewData["categories"] as IEnumerable<Category>;
    string? category = request.RouteValues["category"]?.ToString();
    int prev = Model.CurrentPage == 1 ? 1 : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages ? Model.TotalPages : Model.CurrentPage + 1;
}

<h2 class="m-3">Cosmetics</h2>
<div class="row">
    <!-- выбор категории -->
    <div class="col-2 border-2">
        <ul class="nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button"
                   aria-expanded="false">
                    @ViewData["currentCategory"]
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="product"
                           asp-route-category=@null>All</a>
                    </li>
                    @foreach (var item in categories)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="product"
                               asp-route-category="@item.NormalizedName">
                               @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
    <!-- выбор категории -->
</div>
@if (Model != null)
{
    <div class="card-group">
        @foreach (var item in Model.Items)
        {
            <partial name="_ProductItemPartial" model="@item" />
        }
    </div>
}
<pager current-page="@Model.CurrentPage"
       total-pages="@Model.TotalPages"
       category="@category"
       admin="false">
</pager>
<h2 class="text-warning">@ViewData["Error"]</h2>