@using Miachyna.Domain.Models
@model Dictionary<int,CartItem>

@if (Model.Count() == 0)
{
    <h2 class="m-2">Cart is empty!</h2>
}
else
{
    <h2 class="m-2">Your cart:</h2>
    <table class="table table-striped">
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Value.Item.Image"/></td>
                <td>@item.Value.Item.Name</td>
                <td>@item.Value.Item.Description</td>
                <td>@item.Value.Qty</td>
                <td>
                    <a class="btn btn-danger"
                        asp-action="Remove"                        
                        asp-controller="cart"
                        asp-route-id="@item.Value.Item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}
